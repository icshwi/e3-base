# Absolute PATH SHOULD be used

E3_EPICS_PATH:=/testing2/epics

EPICS_BASE_TAG:=tags/R3.15.5
E3_BASE_VERSION:=3.15.5

E3_CROSS_COMPILER_TARGET_ARCHS:=linux-ppc64e6500
#E3_CROSS_COMPILER_TARGET_ARCHS+=linux-arm



EPICS_BASE_NAME:=epics-base
E3_BASE_SRC_PATH:=$(EPICS_BASE_NAME)


# (EPICS) EPICS_BASE (WILL BE USED in the EPICS BUILDING SYSTEM)
EPICS_BASE:=$(TOP)/$(E3_BASE_SRC_PATH)
EPICS_HOST_ARCH:=$(shell $(EPICS_BASE)/startup/EpicsHostArch.pl)

E3_BASE_INSTALL_LOCATION=$(addprefix $(E3_EPICS_PATH)/base-,$(E3_BASE_VERSION))
E3_BASE_INSTALL_LOCATION_STARTUP:=$(E3_BASE_INSTALL_LOCATION)/startup

export EPICS_BASE
export EPICS_HOST_ARCH


